// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-l": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
      "alt-shift-up": "editor::DuplicateLineUp",
      "alt-shift-down": "editor::DuplicateLineDown",
      "ctrl-d": "editor::SelectNext",
      "ctrl-alt-a": "editor::SelectAll",
      "ctrl-alt-s": "editor::ConvertIndentationToSpaces",
      "ctrl-alt-t": "editor::ConvertIndentationToTabs"
    }
  },
  {
    "context": "Editor",
      "bindings": {
      "ctrl-g ctrl-l": "editor::CopyPermalinkToLine"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-g ctrl-o": "editor::OpenPermalinkToLine"
    }
  },
  {
    "context": "vim_mode == normal",
      "bindings": {
      "shift-y": "vim::YankToEndOfLine"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "y y": "vim::YankLine"
    }
  },
  {
    "context": "((vim_mode == normal || vim_mode == helix_normal) && !menu)",
    "bindings": {
      "y y": "vim::YankLine"
    }
  },
  {
    "context": "Workspace || Dock",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-o": "workspace::CloseAllDocks",
    },
  },
]
