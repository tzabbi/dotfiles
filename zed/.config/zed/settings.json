{
  "icon_theme": "Zed (Default)",
  "auto_install_extensions": {
    "ansible": true,
    "basher": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "gitlab-ci-ls": true,
    "glsl": true,
    "golangci-lint": true,
    "groovy": true,
    "helm": true,
    "html": true,
    "ini": true,
    "jinja2": true,
    "log": true,
    "lua": true,
    "make": true,
    "marksman": true,
    "opentofu": true,
    "php": true,
    "ruby": true,
    "ruff": true,
    "scheme": true,
    "sql": true,
    "toml": true,
    "tmux": true,
    "xml": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "features": {
    "edit_prediction_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "One Dark"
  },
  "hints": {
    "assignVariableTypes": true,
    "compositeLiteralFields": true,
    "compositeLiteralTypes": true,
    "constantValues": true,
    "functionTypeParameters": true,
    "parameterNames": true,
    "rangeVariableTypes": true
  },
  "minimap": {
    "show": "auto"
  },
  "languages": {
    "Go": {
      "hard_tabs": false
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "Dockerfile": ["Dockerfile.*"]
  },
  "lsp": {
    "ansible-language-server": {
      "settings": {
        "ansible": {
          "path": "ansible"
        },
        "executionEnvironment": {
          "enabled": false
        },
        "python": {
          "interpreterPath": "python3"
        },
        "validation": {
          "enabled": true,
          "lint": {
            "enabled": true,
            "path": "ansible-lint"
          }
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "terminal": {
    "env": {
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8"
    },
    "font_family": "JetBrainsMonoNL Nerd Font",
    "scrollbar": {
      "show": "auto"
    }
  },
  "relative_line_numbers": false,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "show_whitespaces": "all",
  "ensure_final_newline_on_save": true,
  "enable_language_server": true,
  "remove_trailing_whitespace_on_save": true,
  "tab_size": 2,
  "current_line_highlight": "gutter",
  "soft_wrap": "editor_width",
  "git_status": true,
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 4,
    "inline_blame": {
      "show_commit_summary": false
    }
  },
  "title_bar": {
    "show_sign_in": false,
    "show_branch_icon": true,
    "show_branch_name": true
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "search": {
    "button": false
  },
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2",
    "button": false
  },
  "active_pane_modifiers": {
    "border_size": 2.0,
    "magnification": 1.2,
    "inactive_opacity": 0.45
  },
  "file_finder": {
    "modal_width": "medium"
  },
  "vim": {
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "replace": "hollow",
      "visual": "underline"
    }
  },
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "enabled": true
  },
  "journal": {
    "hour_format": "hour24"
  }
}
