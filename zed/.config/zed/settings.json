// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "toml": true,
    "ruby": true,
    "git-firefly": true,
    "make": true,
    "terraform": true,
    "xml": true,
    "lua": true,
    "basher": true,
    "docker-compose": true,
    "golangci-lint": true,
    "ini": true,
    "tmux": true,
    "groovy": true,
    "helm": true,
    "vale": true,
    "marksman": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "features": {
    "inline_completion_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "One Dark"
  },
  "hints": {
    "assignVariableTypes": true,
    "compositeLiteralFields": true,
    "compositeLiteralTypes": true,
    "constantValues": true,
    "functionTypeParameters": true,
    "parameterNames": true,
    "rangeVariableTypes": true
  },
  "languages": {
    "Go": {
      "hard_tabs": false
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "terminal": {
    "env": {
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8"
    },
    "font_family": "JetBrainsMonoNL Nerd Font",
    "shell": {
      "program": "/home/linuxbrew/.linuxbrew/bin/zsh"
    }
  },
  "relative_line_numbers": true,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "show_whitespaces": "all",
  "ensure_final_newline_on_save": true,
  "enable_language_server": true,
  "remove_trailing_whitespace_on_save": true,
  "tab_size": 2,
  "current_line_highlight": "gutter",
  "git_status": true,
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2",
    "button": false
  }
}
