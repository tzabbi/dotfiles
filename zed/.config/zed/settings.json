// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "colorize_brackets": true,
  "git_panel": {
    "button": false,
  },
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": false,
    "enable_preview_from_file_finder": false,
  },
  "use_system_window_tabs": false,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "file_icons": false,
    "git_status": true,
  },
  "which_key": {
    "enabled": true,
    "delay_ms": 300,
  },
  "debugger": {
    "button": true,
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
    },
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware",
  },
  "cursor_shape": "bar",
  "disable_ai": true,
  "icon_theme": "Zed (Default)",
  "auto_install_extensions": {
    "ansible": true,
    "basher": true,
    "biome": true,
    "color-highlight": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "gitlab-ci-ls": true,
    "glsl": true,
    "golangci-lint": true,
    "gosum": true,
    "graphql": true,
    "groovy": true,
    "helm": true,
    "html": true,
    "ini": true,
    "jinja2": true,
    "log": true,
    "lua": true,
    "make": true,
    "marksman": true,
    "opentofu": true,
    "php": true,
    "ruby": true,
    "scheme": true,
    "sql": true,
    "tflint": true,
    "toml": true,
    "tmux": true,
    "xml": true,
  },
  "outline_panel": {
    "button": false,
    "dock": "right",
  },
  "notification_panel": {
    "button": false,
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": false,
    "indent_guides": {
      "show": "always",
    },
    "hide_gitignore": false,
    "dock": "right",
  },
  "base_keymap": "VSCode",
  "features": {
    "edit_prediction_provider": "none",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "One Dark",
  },
  "theme_overrides": {
    "One Dark": {
      "syntax": {
        "constant.comment.todo": {
          "color": "#00000000",
          "background_color": "#4078f2ff",
        },
      },
    },
  },
  "minimap": {
    "show": "auto",
  },
  "languages": {
    "Go": {
      "hard_tabs": false,
    },
    "Plain Text": {
      "completions": {
        "words": "enabled",
      },
    },
    "Markdown": {
      "completions": {
        "words": "enabled",
      },
    },
    "YAML": {
      "formatter": "language_server",
    },
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
    ],
    "Dockerfile": ["Dockerfile.*"],
    "OpenTofu": ["tf"],
    "OpenTofu Vars": ["tfvars"],
  },
  "lsp": {
    "ansible": {
      "settings": {
        "ansible": {
          "path": "ansible",
        },
        "executionEnvironment": {
          "enabled": false,
        },
        "python": {
          "interpreterPath": "python3",
        },
        "validation": {
          "enabled": true,
          "lint": {
            "enabled": true,
            "path": "ansible-lint",
          },
        },
      },
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true,
        },
      },
    },
    "helm": {
      "settings": {
        "helm-ls": {
          "logLevel": "info",
          "yamlls": {
            "enabled": true,
          },
        },
      },
    },
    "tflint": {
      "initialization_options": {
        "command": ["tflint", "--langserver"],
      },
    },
    "yaml-language-server": {
      "settings": {
        "redhat": {
          "telemetry": {
            "enabled": false,
          },
        },
        "yaml": {
          "format": {
            "enable": true,
            "singleQuote": true,
            "printWidth": 120,
            "bracketSpacing": false,
          },
          "customTags": ["!reference sequence"],
        },
      },
    },
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false,
    },
    "shell": "system",
    "env": {
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8",
    },
    "font_family": "JetBrainsMonoNL Nerd Font",
    "scrollbar": {
      "show": "auto",
    },
  },
  "relative_line_numbers": "disabled",
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "show_whitespaces": "trailing",
  "ensure_final_newline_on_save": true,
  "enable_language_server": true,
  "remove_trailing_whitespace_on_save": true,
  "tab_size": 2,
  "current_line_highlight": "gutter",
  "soft_wrap": "editor_width",
  "git": {
    "branch_picker": {
      "show_author_name": true,
    },
    "blame": {
      "show_avatar": true,
    },
    "git_gutter": "tracked_files",
    "gutter_debounce": 4,
    "inline_blame": {
      "show_commit_summary": false,
    },
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": false,
    "show_branch_icon": true,
    "show_branch_name": true,
  },
  "collaboration_panel": {
    "button": false,
  },
  "search": {
    "button": false,
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o",
    },
    "button": false,
  },
  "active_pane_modifiers": {
    "border_size": 2.0,
    "inactive_opacity": 0.45,
  },
  "vim": {
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "replace": "hollow",
      "visual": "underline",
    },
  },
  "hide_mouse": "on_typing_and_movement",
  "inlay_hints": {
    "show_background": true,
    "enabled": true,
  },
  "journal": {
    "hour_format": "hour24",
  },
}
